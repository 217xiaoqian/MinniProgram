<!--pages/text/text.wxml-->
<text>pages/text/text.wxml</text>
<!-- 默认文本不能被选中 -->
<text selectable>Hello</text>
<text>World\n</text>

<!-- space 决定文本空格大小 -->
<text>Hello Baobaoli\n</text>
<!-- 相当于一个英文字符大小 -->
<text space="nbsp">Hello Baobaoli\n</text>
<!-- 相当于一个中文字符大小 -->
<text space="emsp">Hello Baobaoli\n</text>
<!-- 相当于半个中文字符大小 -->
<text space="ensp">Hello Baobaoli\n</text>

<!-- 解码 -->
<text decode>5 &gt; 3</text>

